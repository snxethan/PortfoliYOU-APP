{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "out",
    "rootDir": "app",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "types": ["node", "electron"]
  },
  "include": ["app/main/**/*.ts", "app/preload/**/*.ts"]
}

// tsconfig for Electron main and preload processes
// compiles TypeScript files in app/main and app/preload directories
// outputs compiled JavaScript files to the out directory
// uses CommonJS module system and targets ES2020
// includes type definitions for Node.js and Electron